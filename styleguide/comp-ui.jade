      section.doc-ss
        h2 Buttons
        figure
          button button
          a.button a.button
          span.button span.button
        figure
          button.button--disabled button.button--disabled
          a.button.button--disabled a.button.button--disabled
          span.button.button--disabled span.button.button--disabled
      section.doc-ss
        h2 Flags
        section.doc-ss
          h3 Generic Flag (.flag)
          figure
            div.flag Warning: system will self-destruct in 60 seconds.
        section.doc-ss
          h3 Note Flag (.note-flag)
          figure
